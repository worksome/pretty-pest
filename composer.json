{
    "name": "worksome/pretty-pest",
    "description": "Automatically format your Pest PHP tests.",
    "type": "phpcodesniffer-standard",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Worksome\\PrettyPest\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Worksome\\PrettyPest\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Luke Downing",
            "email": "lukeraymonddowning@gmail.com"
        }
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "php": "^8.2",
        "squizlabs/php_codesniffer": "^3.8.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "require-dev": {
        "pestphp/pest": "^2.33"
    },
    "scripts": {
        "test:unit": "vendor/bin/pest -p"
    }
}
